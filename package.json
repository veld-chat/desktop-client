{
  "name": "veld-chat-desktop-app",
  "description": "chat client for the veld.chat chat service",
  "version": "1.0.7",
  "license": "MIT",
  "build": {
    "appId": "com.veld.chat",
    "productName": "Veld Chat",
    "win": {
      "publish": [
        "github"
      ]
    },
    "linux": {
      "publish": [
        "github"
      ]
    },
    "mac": {
      "publish": [
        "github"
      ]
    }
  },
  "scripts": {
    "build": "gatsby build",
    "start": "gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "prebuild": "yarn run clean",
    "electron": "wait-on http://localhost:8000 && electron .",
    "electron-dev": "concurrently \"yarn run start\" \"yarn run electron\"",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder",
    "electron-release": "node_modules/.bin/electron-builder --publish always",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "publish": {
    "provider": "github",
    "repo": "desktop-client",
    "owner": "veld-chat",
    "host": "github.com",
    "protocol": "https",
    "releaseType": "draft"
  },
  "dependencies": {
    "@chakra-ui/gatsby-plugin": "^2.0.0",
    "@chakra-ui/react": "^1.6.1",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@reduxjs/toolkit": "^1.5.1",
    "@types/slate": "^0.47.8",
    "axios": "^0.21.1",
    "codemirror": "^5.56.0",
    "date-fns": "^2.23.0",
    "dompurify": "^2.0.12",
    "electron-serve": "^1.1.0",
    "electron-updater": "^4.3.9",
    "emoji-name-map": "^1.2.9",
    "formik": "^2.2.7",
    "framer-motion": "^4.1.16",
    "gatsby": "^3.5.0",
    "gatsby-plugin-fontawesome-css": "^1.1.0",
    "gatsby-plugin-manifest": "^3.5.0",
    "gatsby-plugin-offline": "^4.5.1",
    "gatsby-plugin-react-helmet": "^4.5.0",
    "gatsby-plugin-sass": "^4.5.0",
    "gatsby-plugin-sharp": "^3.5.0",
    "gatsby-plugin-typescript": "^3.5.0",
    "gatsby-source-filesystem": "^3.5.0",
    "gatsby-transformer-sharp": "^3.5.0",
    "highlight.js": "^10.5.0",
    "hypermd": "^0.3.11",
    "is-hotkey": "^0.2.0",
    "marked": "^2.0.5",
    "node-abi": "^2.26.0",
    "node-emoji": "^1.10.0",
    "prismjs": "^1.23.0",
    "qrcode-with-logos": "^1.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.4",
    "react-virtualized-auto-sizer": "^1.0.5",
    "react-window": "^1.8.6",
    "register-service-worker": "^1.7.1",
    "sass": "^1.32.13",
    "slate": "^0.63.0",
    "slate-history": "^0.62.0",
    "slate-react": "^0.63.0",
    "ts-events": "^3.4.0",
    "twemoji": "^13.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@storybook/addon-a11y": "^6.3.4",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/addon-toolbars": "^6.3.4",
    "@storybook/react": "^6.3.4",
    "@types/codemirror": "^0.0.97",
    "@types/dompurify": "^2.0.3",
    "@types/marked": "^2.0.3",
    "@types/prismjs": "^1.16.5",
    "@types/resize-observer-browser": "^0.1.3",
    "@types/twemoji": "^12.1.1",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "babel-loader": "^8.2.2",
    "cache-loader": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^6.1.0",
    "css-loader": "^4.2.1",
    "electron": "^15.5.5",
    "electron-builder": "^22.10.5",
    "eslint": "^7.6.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^4.3.0",
    "node-sass": "^6.0.0",
    "sass-loader": "^9.0.3",
    "source-map-loader": "^1.0.1",
    "storybook-addon-performance": "^0.16.0",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.1.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "wait-on": "^5.3.0",
    "webpack": "^4.44.1",
