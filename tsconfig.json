{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "esnext",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "include": [
    "./src/**/*",
    "./typings/*.d.ts"
  ]
}
